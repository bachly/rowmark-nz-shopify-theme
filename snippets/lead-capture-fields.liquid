<div class="flex flex-row flex-wrap">
  <div class="w-full lg:w-1/3 lg:pr-4 text-lg">
    <div class="mb-8 font-bold leading-normal">Your details (required)</div>
  </div>
  <!-- Personal details -->
  <div class="w-full lg:w-2/3 lg:pl-4">
    <div class="flex flex-row flex-wrap">
      <div class="w-full mb-8 md:w-1/2 md:pr-2">
        <label
          class="font-bold text-xs tracking-wide uppercase block mb-2 text-gray-500"
          >First name*</label
        >
        <input
          class="py-4 px-5 text-lg border border-gray-400 rounded w-full"
          name="first_name"
          type="text"
          placeholder="First name"
          required
        />
      </div>
      <div class="w-full mb-8 md:w-1/2 md:pl-2">
        <label
          class="font-bold text-xs tracking-wide uppercase block mb-2 text-gray-500"
          >Last name*</label
        >
        <input
          class="py-4 px-5 text-lg border border-gray-400 rounded w-full"
          name="last_name"
          type="text"
          placeholder="Last name"
          required
        />
      </div>
    </div>
    <div class="flex flex-row flex-wrap">
      <div class="w-full mb-8 md:w-1/2 md:pr-2">
        <label
          class="font-bold text-xs tracking-wide uppercase block mb-2 text-gray-500"
          >Email address*</label
        >
        <input
          class="py-4 px-5 text-lg border border-gray-400 rounded w-full"
          name="email"
          type="email"
          placeholder="Email address"
          required
        />
      </div>
      <div class="w-full mb-8 md:w-1/2 md:pl-2">
        <label
          class="font-bold text-xs tracking-wide uppercase block mb-2 text-gray-500"
          >Phone*</label
        >
        <input
          class="py-4 px-5 text-lg border border-gray-400 rounded w-full"
          name="phone"
          type="text"
          placeholder="Phone number"
          required
        />
      </div>
    </div>
    <div class="mb-8 flex flex-row flex-wrap">
      <label
        class="w-full font-bold text-xs tracking-wide uppercase block mb-2 text-gray-500"
        >Message (optional)</label
      >
      <textarea
        class="w-full py-4 px-5 border border-gray-400 rounded h-24 text-lg"
        placeholder="Any message, quetions or comments..."
      ></textarea>
    </div>
  </div>
</div>

