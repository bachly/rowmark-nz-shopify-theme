<div class="flex flex-row flex-wrap">
  <div class="w-full lg:w-1/3 lg:pr-4 text-lg py-2">
    <div class="font-bold leading-normal">Your details</div>
  </div>
  <!-- Personal details -->
  <div class="w-full lg:w-2/3 px-6 py-6 bg-white border border-gray-300 rounded-sm shadow-sm">
    <div class="flex flex-row flex-wrap">
      <div class="w-full mb-4 md:w-1/2 md:pr-2">
        <label class="font-bold text-xs tracking-wide uppercase block mb-2 text-gray-500">First name*</label>
        <input class="py-3 px-5 text-lg border border-gray-400 rounded w-full" name="contact[first_name]" type="text"
          placeholder="First name" required />
      </div>
      <div class="w-full mb-4 md:w-1/2 md:pl-2">
        <label class="font-bold text-xs tracking-wide uppercase block mb-2 text-gray-500">Last name*</label>
        <input class="py-3 px-5 text-lg border border-gray-400 rounded w-full" name="contact[last_name]" type="text"
          placeholder="Last name" required />
      </div>
    </div>
    <div class="flex flex-row flex-wrap">
      <div class="w-full mb-4 md:w-1/2 md:pr-2">
        <label class="font-bold text-xs tracking-wide uppercase block mb-2 text-gray-500">Email address*</label>
        <input class="py-3 px-5 text-lg border border-gray-400 rounded w-full" name="contact[email]" type="email"
          placeholder="Email address" required />
      </div>
      <div class="w-full md:w-1/2 md:pl-2">
        <label class="font-bold text-xs tracking-wide uppercase block mb-2 text-gray-500">Phone*</label>
        <input class="py-3 px-5 text-lg border border-gray-400 rounded w-full" name="contact[phone]" type="text"
          placeholder="Phone number" required />
      </div>
    </div>
  </div>
</div>

<div class="mt-4 flex flex-row flex-wrap">
  <div class="w-full lg:w-1/3 lg:pr-4 text-lg py-2">
