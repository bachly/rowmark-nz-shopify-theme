<div class="text-blue-800" style="min-height: 600px" data-template-page>
  <section class="bg-gray-100">
    <div class="container mx-auto px-2 md:px-0 py-8">
      <div class="max-w-3xl mx-auto lg:pr-4 lg:mb-0">
        <h1 class="mt-0 font-black text-4xl mb-4 text-center">{{ page.title }}</h1>
      </div>
    </div>
  </section>

  <section>
    <div class="max-w-3xl mx-auto px-2 md:px-0 py-8">
      {% if page.content != blank %}
      <div class="page-description text-xl leading-normal">
        {{ page.content }}
      </div>
      {% endif %}
    </div>
  </section>
</div>